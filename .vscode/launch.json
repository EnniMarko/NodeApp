{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js"
        },
        {
            "type": "node-terminal",
            "name": "Run",
            "request": "launch",
            "command": "nodemon app.js",
            "cwd": "${workspaceFolder}"
        }
    ]
}